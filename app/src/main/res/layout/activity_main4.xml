<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sv"
    tools:context="com.gwalior.android.zaika_e_gwalior.Main4Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll"
        android:orientation="vertical"
        android:padding="7dp"
        android:background="#dddd">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/cardview1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relativelayout1"
                android:padding="6dp"
                android:elevation="4dp"
                android:background="#ffff">
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:id="@+id/image"
                    android:scaleType = "centerCrop"
                    android:src="@drawable/newhistorical"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:text="Gwalior Fort"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/image" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="Gwalior Fort,Gwalior"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="6AM–5:30PM"
                    android:gravity="center"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/textView1"
                    android:layout_centerHorizontal="true"

                    app:srcCompat="@drawable/locationicon" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType = "centerCrop"
                    app:srcCompat="@drawable/timing"
                    android:layout_below="@+id/textView2"
                    android:layout_alignStart="@+id/imageView2" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/cardview2"
            android:layout_marginTop="7dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relativelayout"
                android:padding="6dp"
                android:elevation="4dp"
                android:background="#ffff">
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:id="@+id/image4"
                    android:src="@drawable/jaivilas"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:text="Jai Vilas Palace"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/image4" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="Lashkar,Gwalior"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text=" 10AM–6:30PM"
                    android:gravity="center"
                    android:layout_below="@+id/textView5"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/textView4"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/locationicon" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType = "centerCrop"
                    app:srcCompat="@drawable/timing"
                    android:layout_below="@+id/textView5"
                    android:layout_alignStart="@+id/imageView5" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/cardview3"
            android:layout_marginTop="7dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relativelayout3"
                android:padding="6dp"
                android:elevation="4dp"
                android:background="#ffff">
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:id="@+id/image7"
                    android:src="@drawable/gopachal"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:text="Gopachal Parvat"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/image7" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="Gwalior Fort,Gwalior"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="--"
                    android:gravity="center"
                    android:layout_below="@+id/textView8"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/textView7"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/locationicon" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType = "centerCrop"
                    app:srcCompat="@drawable/timing"
                    android:layout_below="@+id/textView8"
                    android:layout_alignStart="@+id/imageView8" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/cardview4"
            android:layout_marginTop="7dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relativelayout4"
                android:padding="6dp"
                android:elevation="4dp"
                android:background="#ffff">
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:id="@+id/image10"
                    android:src="@drawable/sasbahu"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:text="Sahastra Bahu Temple"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/image10" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text=" Fort Campus,Gwalior"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="5AM–6PM"
                    android:gravity="center"
                    android:layout_below="@+id/textView11"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/textView10"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/locationicon" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType = "centerCrop"
                    app:srcCompat="@drawable/timing"
                    android:layout_below="@+id/textView11"
                    android:layout_alignStart="@+id/imageView11" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>



    </LinearLayout>

</ScrollView>
